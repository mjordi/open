{
  "name": "access-management-contracts",
  "version": "1.0.0",
  "description": "Solidity smart contracts for access management",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "test": "npx hardhat test",
    "test:frontend": "vitest run",
    "test:frontend:watch": "vitest",
    "test:frontend:ui": "vitest --ui",
    "test:frontend:coverage": "vitest run --coverage",
    "test:all": "npm run test && npm run test:frontend",
    "compile": "npx hardhat compile",
    "generate": "node scripts/generate-frontend-artifacts.js",
    "build": "npm run compile && npm run generate && node scripts/build-frontend.js",
    "clean": "npx hardhat clean && rm -rf frontend/dist frontend/src/generated",
    "serve": "npx http-server frontend/public -p 8000"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.1",
    "@vitest/ui": "^4.0.14",
    "happy-dom": "^20.0.11",
    "hardhat": "^3.0.16",
    "jsdom": "^27.2.0",
    "vitest": "^4.0.10"
  },
  "overrides": {
    "glob": ">=11.1.0"
  }
}
