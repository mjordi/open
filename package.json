{
  "name": "open",
  "version": "1.0.0",
  "description": "Smart contract asset management system with role-based access control",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:unit": "npx hardhat test --grep 'AssetTracker|RoleBasedAcl|AccessManagement'",
    "test:integration": "npx hardhat test test/sample-test.js",
    "test:coverage": "npx hardhat coverage",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "test:gas-report": "REPORT_GAS=true npx hardhat test > gas-report.txt",
    "test:ci": "npx hardhat test --reporter json > test-results.json",
    "test:fuzz": "npx hardhat test test/PropertyBasedTests.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:fuzz",
    "analyze:performance": "npx hardhat run scripts/performance-analysis.js",
    "size": "hardhat size-contracts",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean && rm -rf cache artifacts typechain-types coverage",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "lint:sol": "npx solhint 'contracts/**/*.sol' || true",
    "lint:js": "npx eslint . --ext .js || true",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write .",
    "format:check": "npx prettier --check .",
    "audit": "npm audit --audit-level moderate",
    "benchmark": "npm run test:gas && npm run size",
    "performance": "npm run benchmark && npm run analyze:performance",
    "optimize": "npm run test:all && npm run performance",
    "validate": "npm run compile && npm run lint && npm run test:all && npm run audit",
    "build:abi": "node -e \"const fs = require('fs'); const abi = require('./artifacts/contracts/RoleBasedAcl.sol/RoleBasedAcl.json').abi; fs.writeFileSync('./docs/abi_aaas.js', 'const smartContractAbi = ' + JSON.stringify(abi, null, 2) + ';'); console.log('ABI generated at docs/abi_aaas.js');\"",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.9",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^6.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.14.4",
    "hardhat": "^2.24.3",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.3.3",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "asset-management",
    "access-control",
    "hardhat"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}
